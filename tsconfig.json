{
    "compilerOptions": {
        "baseUrl": "src",
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "es2018",
        "allowJs": false,
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "noImplicitAny": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "moduleResolution": "Bundler",
        "importHelpers": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "lib": ["dom", "es5", "scripthost", "es2018", "DOM.Iterable"],
        "paths": {
            "react": ["../node_modules/preact/compat/"],
            "react-dom": ["../node_modules/preact/compat/"],
            "preact/src/jsx": ["../node_modules/preact/src/jsx.d.ts"],
            "obsidian-testing-framework/utils": ["../node_modules/obsidian-testing-framework/lib/util"],
            "obsidian-testing-framework/fixture": ["../node_modules/obsidian-testing-framework/lib/fixtures"],
            "obsidian-testing-framework": ["../node_modules/obsidian-testing-framework/lib/index"],
        },
        "types": ["node", "jest"],
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["lib/**/*"]
}
